<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1065C0"
    tools:context=".MainActivity2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="301dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                app:layout_constraintBottom_toTopOf="@+id/tvRecebeUsuario1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39"
                app:srcCompat="@drawable/img_20220210_wa0005" />

            <EditText
                android:id="@+id/tvRecebeUsuario1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="192dp"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btOfertas"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/roundedbutton"
                android:text="em oferta"
                android:layout_marginLeft="8dp"
                app:backgroundTint="#FF8900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecebeUsuario1"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btVendas"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/roundedbutton"
                android:text="vendas"
                app:backgroundTint="#FF8900"
                app:layout_constraintBottom_toTopOf="@+id/btPerfil"
                app:layout_constraintEnd_toStartOf="@+id/btNotificações"
                app:layout_constraintHorizontal_bias="0.568"
                app:layout_constraintStart_toEndOf="@+id/btOfertas"
                app:layout_constraintTop_toBottomOf="@+id/tvRecebeUsuario1"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btNotificações"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/roundedbutton"
                android:text="avisos"
                android:layout_marginRight="8dp"
                app:backgroundTint="#FF8900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.459" />

            <Button
                android:id="@+id/btFacebook"
                android:layout_width="113dp"
                android:layout_height="110dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/roundedbutton"
                android:text="FACEBOOk"
                app:backgroundTint="#FF8900"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btPerfil"
                app:layout_constraintHorizontal_bias="0.116"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btOfertas"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btPerfil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:text="Meu perfil"
                app:backgroundTint="#FF8900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.514"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.716" />

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/roundedbutton"
                android:text="twitter"
                app:backgroundTint="#FF8900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btPerfil"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.692" />

            <Button
                android:id="@+id/btCanaisdecontato"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedbutton"
                android:text="CANAIS DE CONTATO"
                app:backgroundTint="#FF8C00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintHorizontal_bias="0.872"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btPerfil"
                app:layout_constraintVertical_bias="1.0"
                app:layout_goneMarginTop="45dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/roundedbutton"
                android:text="calcula churrasco"
                app:backgroundTint="#FF8C00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/vendas_online"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/roundedbutton"
                android:text="nosso site"
                app:backgroundTint="#FF8C00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btCanaisdecontato"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btFacebook"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>


