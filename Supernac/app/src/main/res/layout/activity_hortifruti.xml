<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFA500"
    tools:context=".Hortifruti">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#0000FF"
            android:text="Hortifrutti"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/crdBatata"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#808080"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/tvIphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Batata Comum"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBatataNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvIphone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Saco de 10KG"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/edtBatata"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvBatataNome"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="6dp"
                        android:text="34.99"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvBatataPreco"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvBatataNome"
                        android:layout_marginTop="6dp"
                        android:text="R$: "
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/batata_comum" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crdAlface"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#808080"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/Abbey_Road"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Alface Crespa un"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAlfaceNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Abbey_Road"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="13.3 Polegadas"
                        android:textColor="#fff"
                        android:visibility="invisible" />


                    <TextView
                        android:id="@+id/edtAlface"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAlfaceNome"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="6dp"
                        android:text="3.00"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvMacBookPreco"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvAlfaceNome"
                        android:layout_marginTop="6dp"
                        android:text="R$: "
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/alface" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crdMam達o"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#808080"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/Sgt_Peppers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Mam達o Papaya un"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRoteadorNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sgt_Peppers"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Wifi Smart Stream 802.11ax"
                        android:textColor="#fff"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/edtMam達o"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvRoteadorNome"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="6dp"
                        android:text="4.99"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvMam達oPreco"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvRoteadorNome"
                        android:layout_marginTop="6dp"
                        android:text="R$: "
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/mam_o_papaya" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvescondido4"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/edtTotalhortifruti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
