<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eletronicos_carrinho"
    android:background="#FFA500">

    <LinearLayout
        android:id="@+id/edtquantidadeeletronicos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Eletrônicos"
            android:gravity="center"
            android:background="@color/azul_supernac"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/crdMultimetro"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"
                android:padding="10dp">


                <TextView
                    android:id="@+id/tvMultimetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Multímetro"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMultimetroNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMultimetro"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="400G"
                    android:visibility="invisible"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/edtMultimetro"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMultimetroNome"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="6dp"
                    android:text="37.97"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvMultimetroPreco"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMultimetroNome"
                    android:layout_marginTop="6dp"
                    android:text="R$: "
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/multimetro" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crdCapacitor"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"
                android:padding="10dp">

                <TextView
                    android:id="@+id/Abbey_Road"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Capacitor"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCapacitorNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Abbey_Road"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="1K a unidade"
                    android:visibility="invisible"
                    android:textColor="#fff" />


                <TextView
                    android:id="@+id/edtCapacitor"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCapacitorNome"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="6dp"
                    android:text="0.20"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvCapacitorPreco"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCapacitorNome"
                    android:layout_marginTop="6dp"
                    android:text="R$: "
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/capacitor_2" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crdChuveiro"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"
                android:padding="10dp">

                <TextView
                    android:id="@+id/Sgt_Peppers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Ducha Lorenzetti"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvChuveiroNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Sgt_Peppers"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="1KG a unidade"
                    android:visibility="invisible"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/edtChuveiro"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvChuveiroNome"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="6dp"
                    android:text="59.99"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvChuveiroPreco"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvChuveiroNome"
                    android:layout_marginTop="6dp"
                    android:text="R$: "
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/chuveiro_eletrico_multitemperatura_maxi_ducha_branco_5500w_220v_branco_lorenzetti" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvescondido6"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/edtTotaleletronicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>


    </LinearLayout>


</ScrollView>